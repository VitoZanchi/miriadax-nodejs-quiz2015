    <form method="get" action="/quizes/<%= quiz.id %>/answer">        
      <p>Tema: <em><%= quiz.genero %></em></p>
      <br/>
      <p>La pregunta es: <strong><%= quiz.pregunta %></strong></p>
      <p>&nbsp;</p>
      <input type="text" name="respuesta" size="40" 
             placeholder="Escriba la respuesta aqui" value=""/>
      <input type="submit" value="Enviar">
    </form>

    <br/>
    <p>
    <a href="/quizes/<%= quiz.id %>/comments/new/">
    <input type="button" value=" Nuevo comentario " />
    </a>
    </p>

    <br/>
    <% if( quiz.Comments.length > 0 ) { %>
        <p><strong>Comentarios:</strong></p>
        <% for(index in quiz.Comments ) { %>
          <p> - <%= quiz.Comments[index].texto %> </p>
        <% } %>
    <% } %>

